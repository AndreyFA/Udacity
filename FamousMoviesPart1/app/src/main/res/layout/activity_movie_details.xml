<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        tools:context=".MovieDetailsActivity">

        <TextView
            android:id="@+id/tv_label_movie_original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_original_title"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_detail_movie_original_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_original_title"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_movie_original_title" />

        <ImageView
            android:id="@+id/iv_detail_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/content_description_movie_poster"
            app:layout_constraintTop_toBottomOf="@+id/tv_detail_movie_original_title"/>

        <TextView
            android:id="@+id/tv_label_vote_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_vote_average"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/iv_detail_movie_poster" />

        <TextView
            android:id="@+id/tv_detail_movie_vote_average"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_vote_average"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_vote_average" />

        <TextView
            android:id="@+id/tv_label_movie_original_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_original_language"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_movie_vote_average" />

        <TextView
            android:id="@+id/tv_detail_movie_original_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_original_language"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_movie_original_language" />

        <TextView
            android:id="@+id/tv_label_movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_release_date"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_movie_original_language" />

        <TextView
            android:id="@+id/tv_detail_movie_release_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_release_date"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_movie_release_date" />

        <TextView
            android:id="@+id/tv_label_movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_overview"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_detail_movie_release_date" />

        <TextView
            android:id="@+id/tv_detail_movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/label_movie_overview"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_label_movie_overview" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
